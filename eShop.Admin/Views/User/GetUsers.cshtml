@model List<eShop.DataTransferObject.UserQueryDTO>


<a class="btn btn-primary" style="margin-bottom:10px" role="button" asp-controller="User" asp-action="UserRegistration">
    მომხმარებლების რეგისტრაცია
</a>
 
<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Role</th>
            <th>IsActive</th>
            <th>DateCreated</th>
            <th>რედაქტირება/წაშლა</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>@item.IsActive</td>
                <td>@item.DateCreated</td>
                <td>
                    <button class="btn btn-success btn-sm rounded-0 d-inline-block" type="submit" style="margin-right:5px;height:38px" ; data-placement="top" data-toggle="modal" onclick="getUser(@item.ID)" data-target="#UserModal" title="რედაქტირება"><i class="fa fa-edit"></i> რედაქტირება</button>
                    @*<form asp-controller="User" asp-action="DeleteUser" method="post">
            <input type="hidden" value="@item.ID" name="UserID" />
            <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="წაშლა" data-id="@item.ID" asp-controller="User" asp-action="DeleteUser"><i class="fa fa-trash"></i></button>

        </form>*@
                    <form class="d-inline-block" asp-controller="User" asp-action="DeleteUser" method="post">
                        <input type="hidden" value="@item.ID" name="UserID" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> წაშლა
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="UserModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">პროდუქტი</h5>
            </div>
            <div class="modal-body">
                <div class="form-floating mb-3">
                    <input class="form-control" name="FirstName" id="FirstName" type="text" placeholder="სახელი" />
                    <label>სახელი</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" name="LastName" id="LastName" type="text" placeholder="გვარი" />
                    <label>გვარი</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" name="Email" id="Email" type="email" placeholder="მეილი" />
                    <label>მეილი</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" name="Quantity" id="Quantity" type="text" placeholder="რაოდენობა" />
                    <label>რაოდენობა</label>
                </div>
            </div>
            <div class="modal-footer">
                <a href="" class="btn btn-danger">გაუქმება</a>
                <a href="" class="btn btn-success">დამახსოვრება</a>
            </div>
        </div>
    </div>
</div>
