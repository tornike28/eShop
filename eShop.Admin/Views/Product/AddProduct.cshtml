@model eShop.Admin.Models.AddProductModel



<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">პროდუქტის დამატება</h3></div>
            <div class="card-body">
                <form action="/Product/AddProduct" enctype="multipart/form-data" method="post">
                    <div class="form-floating mb-3">
                        <input class="form-control" name="ProductName" id="ProductName" type="text" placeholder="პროდუქტის დასახელება" />
                        <label for="inputEmail">პროდუქტის დასახელება</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" name="Price" id="Price" placeholder="ფასი" />
                        <label for="inputEmail">ფასი</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" name="Quantity" id="Quantity" placeholder="რაოდენობა" />
                        <label for="inputEmail">რაოდენობა</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" name="Description" id="Description" type="text" placeholder="აღწერა" />
                        <label for="inputPassword">აღწერა</label>
                    </div>
                    <select class="form-floating mb-3 form-select" aria-label="Default select example"  name="UnitID">
                        <option  selected>აირჩიეთ ერთეული</option>

                        @{foreach (var item in ViewBag.Units)
                            {
                <option value="@item.UnitID">@item.UnitName</option>
 } }

                    </select>
                    <select class="form-floating mb-3 form-select" aria-label="Default select example" name="CategoryID">
                        <option selected>აირჩიეთ კატეგორია</option>

                        @{foreach (var item in ViewBag.categories)
                            {
                <option value="@item.Id">@item.CategoryName</option>
 } }

                    </select>
                    <input type="file" name="ImageFiles" multiple required />
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <input type="submit" style="margin-top:15px" value="დამატება" class="btn btn-primary">
                    </div>
                </form>
