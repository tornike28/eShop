@model eShop.DataTransferObject.UserQueryDTO

<div style="margin-top:100px" class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                @Char.ToUpper(@Model.FirstName[0])
                                <h4>@Model.FirstName</h4>
                                <p class="text-muted font-size-sm">@Model.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8" style="margin-bottom:200px">
                <div class="card mb-3">
                    <div class="card-body">

                        <form asp-controller="User" asp-action="UpdateUserInformation" method="post">


                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary" >
                                    <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary" >
                                    <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Member Scince</h6>
                                </div>
                                <div class="col-sm-9 text-secondary" >
                                    @Model.DateCreated
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-info">შენახვა</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin:30px;">
    <h4 style="margin-bottom:10px" class="d-inline-block">თქვენი მისამართები</h4>
    @*<a style="margin-left:10px; margin-bottom:10px" class="btn btn-info " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills"></a>*@
    <button id="editBtn" style="margin-bottom:5px;height:38px" class="btn btn-success btn-sm rounded-0 d-inline-block" type="button" data-placement="top" data-toggle="modal" data-target="#AddressModal" title="რედაქტირება"><span class="iconify" data-icon="bi:pencil"></span>ახალი მისამართის დამატება</button>

    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col">ქალაქი</th>
                <th scope="col">მისამართი</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="col">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1"></label>
                    </div>
                </td>
                <th scope="row">3</th>
                <td>თბილისი</td>
                <td>
                    ვაკის ქუჩა
                </td>
            </tr>
        </tbody>
    </table>
</div>




<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">პროდუქტის რედაქტირება</h5>
            </div>
            <div class="modal-body">

                <form enctype="multipart/form-data" asp-controller="User" asp-action="SaveUserAddress" method="post">
                    <div class="mb-3" hidden>
                        <label for="Id" class="col-form-label">ქალაქი</label>
                        <input type="text" class="form-control" id="Id" name="Id">
                    </div>
                    <div class="mb-3">
                        <label for="Quantity" class="col-form-label">ზუსტი მისამართი</label>
                        <input type="text" class="form-control" id="Quantity" name="Quantity">
                    </div>

                   
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">გაუქმება</button>
                        <input type="submit" class="btn btn-primary" value="შენახვა">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>