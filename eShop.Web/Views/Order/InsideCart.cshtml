@model eShop.Web.Models.InsideCartModel

<div style="margin:30px;">
    <h2>პროდუქტები</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">პროდუქტის სახელი</th>
                <th scope="col">რაოენობა</th>
                <th scope="col">ფასი</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{foreach (var item in Model.CartInfo)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.ProductName</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="რაოდენობა" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">ცალი</span>
                                </div>
                            </div>

                        </td>
                        <td>@item.price</td>
                        <td>
                            <button class="btn btn-primary">განახლება</button>
                            <button class="btn btn-danger">წაშლა</button>
                        </td>
                    </tr>
                }}
        </tbody>
        <tfoot>
            <tr>
                <th scope="row"></th>
                <td></td>
                <td></td>
                <td>@ViewBag.TotalPrice ₾ </td>
            </tr>
        </tfoot>
    </table>
</div>
<div style="margin:30px;">
    <h2>მისამართები</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">#</th>
                <th scope="col">ქალაქი</th>
                <th scope="col">მისამართი</th>

            </tr>
        </thead>

        @{
            var i = 1;
            foreach (var item in Model.address)
            {
                <tbody>

                    <tr>
                        <td scope="col">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                                <label class="form-check-label" for="inlineCheckbox1"></label>
                            </div>
                        </td>
                        <th scope="row">@i</th>
                        <td>@item.City</td>
                        <td>
                            @item.FullAddress
                        </td>
                    </tr>
                </tbody>
                i++;
            }
        }

    </table>
</div>
<br />
<div style="margin:30px;">
    <button type="button" class="btn btn-primary">გადახდა</button>
</div>
