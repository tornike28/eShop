@model eShop.Web.Models.InsideCartModel

<div style="margin:30px;">
    <h2>პროდუქტები</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">პროდუქტის სახელი</th>
                <th scope="col">რაოენობა</th>
                <th scope="col">ფასი</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{foreach (var item in Model.CartInfo)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.ProductName</td>
                        <td>
                            <div class="input-group mb-3">
                                <input type="number" class="form-control" placeholder="რაოდენობა" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">ცალი</span>
                                </div>
                            </div>

                        </td>
                        <td>@item.price</td>
                        <td>
                            <button class="btn btn-primary">განახლება</button>
                            <button class="btn btn-danger" type="submit">
                                <a style="color:white" asp-controller="Order" asp-action="DeleteProductFromCart" asp-route-Id="@item.ProductId"> წაშლა</a>
                            </button>

                        </td>
                    </tr>
                }}
        </tbody>
        <tfoot>
            <tr>
                <th scope="row"></th>
                <td></td>
                <td></td>
                <td>@ViewBag.TotalPrice ₾ </td>
            </tr>
        </tfoot>
    </table>
</div>

<br />
<div style="margin:30px;">
    <button class="btn btn-primary" type="submit" ><a class="btn btn-primary" type="submit"  asp-controller="order" asp-action="payment">გადახდა</a></button>
</div>
